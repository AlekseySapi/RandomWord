<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние нажатия (checked) -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="@color/lang_button_stroke_color" />
            <solid android:color="@color/timer_button_checked" />
        </shape>
    </item>
    <!-- Состояние по умолчанию (unchecked) -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="0dp"
                android:color="@android:color/transparent" />
            <solid android:color="@color/timer_button_unchecked" />
        </shape>
    </item>
</selector>