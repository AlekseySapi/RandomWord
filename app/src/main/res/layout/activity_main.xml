            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- ÐšÐ½Ð¾Ð¿ÐºÐ° Ð³ÐµÐ½ÐµÑ€Ð°Ñ†Ð¸Ð¸ ÑÐ»ÑƒÑ‡Ð°Ð¹Ð½Ð¾Ð³Ð¾ ÑÐ»Ð¾Ð²Ð° -->
        <Button
            android:id="@+id/generateWordButton"
            android:layout_width="match_parent"
