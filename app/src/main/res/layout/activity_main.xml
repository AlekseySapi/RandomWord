<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/categoryTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/languageToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textOff="ENG"
            android:textOn="RUS" />

        <ToggleButton
            android:id="@+id/timerToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_selector"
            android:checked="true"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:textOff="Таймер"
            android:textOn="Таймер" />

        <TextView
            android:id="@+id/wordsCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="end"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <!-- Тумблеры категорий -->
    <LinearLayout
        android:id="@+id/categoryToggles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/toggleNature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/toggle_button_background"
            android:checked="true"
            android:padding="8dp"
            android:textColor="@drawable/toggle_button_text_color"
            android:textOff="@string/toggle_nature"
            android:textOn="@string/toggle_nature"
            android:textSize="@dimen/_tgFontSize" />

        <ToggleButton
            android:id="@+id/toggleSociety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_button_background"
            android:checked="true"
            android:padding="8dp"
            android:textColor="@drawable/toggle_button_text_color"
            android:textOff="@string/toggle_society"
            android:textOn="@string/toggle_society"
            android:textSize="@dimen/_tgFontSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/categoryToggles2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/toggleTechnology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/toggle_button_background"
            android:checked="true"
            android:padding="8dp"
            android:textColor="@drawable/toggle_button_text_color"
            android:textOff="@string/toggle_technology"
            android:textOn="@string/toggle_technology"
            android:textSize="@dimen/_tgFontSize" />

        <ToggleButton
            android:id="@+id/toggleFantastic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/toggle_button_background"
            android:checked="true"
            android:padding="8dp"
            android:textColor="@drawable/toggle_button_text_color"
            android:textOff="@string/toggle_fantastic"
            android:textOn="@string/toggle_fantastic"
            android:textSize="@dimen/_tgFontSize" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4" />

    <!-- Таймер -->
    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="26sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1" />

    <!-- Текстовое поле для отображения случайного слова -->
    <TextView
        android:id="@+id/randomWordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:text="@string/text_field"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/_textSize"
        android:textStyle="bold" />

    <!-- Промежуточное пространство -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Кнопка генерации случайного слова -->
    <Button
        android:id="@+id/generateWordButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/ripple_effect"
        android:text="@string/btn_text"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_btnTextSize" />
</LinearLayout>
